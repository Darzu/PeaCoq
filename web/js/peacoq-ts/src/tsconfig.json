{
  "atom": {
    "formatOnSave": false
  },
  "compilerOptions": {
    "declaration": false,
    "module": "amd",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "..",
    "preserveConstEnums": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "filesGlob": [
    "*.ts",
    "DefinitelyTyped/ace/ace.d.ts",
    "DefinitelyTyped/d3/d3.d.ts",
    "DefinitelyTyped/es6-shim/es6-shim.d.ts",
    "DefinitelyTyped/lodash/lodash.d.ts",
    "DefinitelyTyped/jquery/jquery.d.ts",
    "DefinitelyTyped/jss/jss.d.ts",
    "DefinitelyTyped/mathjax/mathjax.d.ts",
    "DefinitelyTyped/rx/rx.all.d.ts",
    "DefinitelyTyped/tsmonad/tsmonad.d.ts",
    "DefinitelyTyped/w2ui/w2ui.d.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 4,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  }
}
